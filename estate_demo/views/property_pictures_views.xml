<?xml version="1.0"?>
<odoo>
    <record id="estate_property_pictures_view_tree" model="ir.ui.view">
        <field name="name">estate_property.pictures.tree</field>
        <field name="model">estate.property.pictures</field>
        <field name="arch" type="xml">
            <tree>
                <field name="property_id"/>
                <field name="image" widget="image"
                    options="{'size':[64,64]}"/>
            </tree>
        </field>
    </record>
</odoo>