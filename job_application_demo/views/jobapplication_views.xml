<?xml version="1.0"?>
<odoo>
    <record id="job_application_view_tree" model="ir.ui.view">
        <field name="name">job_application.tree</field>
        <field name="model">job.application.form</field>
        <field name="arch" type="xml">
            <tree>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone_number"/>
                    <field name="gender"/>
                    <field name="birth_date"/>
                    <field name="cnic"/>
                    <field name="primary_image" widget="image" options="{'size':[64,64]}"/>
                    <field name="highest_degree"/>
            </tree>
        </field>
    </record>
</odoo>